{
    "name": "Hottie",
    "version": "0.0.0",
    "description": "Central heating controller",
    "main": "Hottie.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "author": "Crawford Currie",
    "bin": { "module-name": "./Hottie.js" },
    "main": { "module-name": "./Hottie.js" },
    "license": "MIT",
    "keywords": [
        "gpio",
        "raspberry",
        "raspi",
        "rpi",
        "home",
        "heating",
        "control",
        "pi"
    ],
    "dependencies": {
        "node-getopt": "0.2.3",
        "node-extend": "0.2.0",
        "fs": "0.0.2",
        "events": "1.1.0",
        "util": "0.10.3",
        "ds18x20": "0.2.0"
    },
    "analyze": true,
    "eslintConfig": {
        "env": {
            "browser": true,
            "jquery": true
        },
        "ecmaFeatures": {
            "blockBindings": true
        },
        "globals": {
            "require": true,
            "module": true,
            "Buffer": true
        },
        "rules": {
            "no-underscore-dangle": 0,
            "curly": 0,
            "camelcase": 0,
            "no-unused-vars": 1,
            "no-console": 0,
            "no-debugger": 0,
            "no-alert": 1,
            "no-new" : 0,
            "new-cap" : 0,
            "dot-notation" : 1,
            "no-trailing-spaces" : 0,
            "no-use-before-define": "3 nofunc",
            "no-loop-func": 1,
            "no-eval": 1
        }
    }
}
