{
    "name": "Hotpot",
    "version": "0.0.0",
    "description": "Central heating controller",
    "main": {
        "module-name": "Hotpot.js"
    },
    "bugs": {
        "url": "https://github.com/cdot/Hotpot/issues"
    },
    "author": "Crawford Currie",
    "bin": {
        "module-name": "Hotpot.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/cdot/Hotpot.git"
    },
    "license": "MIT",
    "keywords": [
        "gpio",
        "raspberry",
        "raspi",
        "rpi",
        "home",
        "heating",
        "control",
        "pi"
    ],
    "dependencies": {
        "basic-auth": "^2.0.1",
        "follow-redirects": "^1.13.2",
        "fs": "0.0.1-security",
        "google-auth-library": "^6.1.6",
        "googleapis": "^67.0.0",
        "http": "0.0.1-security",
        "https": "^1.0.0",
        "mime-types": "^2.1.28",
        "node-getopt": "^0.3.2",
        "nodemailer": "^6.4.17",
        "path": "^0.12.7",
        "readline": "^1.3.0",
        "requirejs": "^2.3.6"
    },
    "analyze": true,
    "eslintConfig": {
        "parserOptions": {
            "ecmaVersion": 2017
        },
        "env": {
            "browser": true,
            "jquery": true
        },
        "globals": {
            "module": true,
            "HOTPOT_DEBUG": true
        },
        "rules": {
            "strict": 0,
            "no-underscore-dangle": 0,
            "curly": 0,
            "camelcase": 0,
            "eol-last": 0,
            "no-unused-vars": 1,
            "no-console": 0,
            "no-debugger": 0,
            "no-alert": 1,
            "no-new": 0,
            "new-cap": 0,
            "dot-notation": 1,
            "no-trailing-spaces": 0,
            "no-use-before-define": 0,
            "no-loop-func": 0,
            "no-process-exit": 0,
            "no-eval": 0,
            "quotes": 0
        }
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "chai-http": "^4.3.0",
        "mocha": "^8.2.1",
        "request": "^2.88.2"
    }
}
