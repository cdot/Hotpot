<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:dialogTitle="@string/server_url"
        android:inputType="textUri"
        android:key="@string/PREF_URL"
        android:summary="@string/server_url_desc"
        android:title="@string/server_url" />
    <EditTextPreference
        android:dialogTitle="@string/server_user"
        android:inputType="textPersonName"
        android:key="@string/PREF_USER"
        android:summary="@string/server_user_desc"
        android:title="@string/server_user" />
    <EditTextPreference
        android:dialogTitle="@string/server_pass"
        android:inputType="textPassword"
        android:key="@string/PREF_PASS"
        android:summary="@string/server_pass_desc"
        android:title="@string/server_pass" />
    <EditTextPreference
        android:dialogTitle="@string/update_freq"
        android:inputType="number"
        android:key="@string/PREF_FREQ"
        android:summary="@string/update_freq_desc"
        android:title="@string/update_freq" />
</PreferenceScreen>
