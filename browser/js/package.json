{
    "name": "Hotpot",
    "version": "0.0.0",
    "description": "Central heating controller",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "author": "Crawford Currie",
    "license": "MIT",
    "keywords": [
        "gpio",
        "raspberry",
        "raspi",
        "rpi",
        "home",
        "heating",
        "control",
        "pi"
    ],
    "eslintConfig": {
        "env": {
            "browser": true,
            "jquery": true
        },
        "ecmaFeatures": {
            "blockBindings": true
        },
        "globals": {
        },
        "rules": {
            "no-underscore-dangle": 0,
            "curly": 0,
            "camelcase": 0,
            "no-unused-vars": 1,
            "no-console": 0,
            "no-debugger": 0,
            "no-alert": 1,
            "no-new" : 0,
            "new-cap" : 0,
            "dot-notation" : 1,
            "no-trailing-spaces" : 0,
            "no-use-before-define": "3 nofunc",
            "no-loop-func": 1,
            "no-eval": 1
        }
    }
}
