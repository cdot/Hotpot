{
    "name": "Hotpot common code tests",
    "version": "0.0.0",
    "type": "module",
    "main": {
        "module-name": "Hotpot.js"
    },
    "engines": {
        "node": ">=12.0.0"
    },
    "bugs": {
        "url": "https://github.com/cdot/Hotpot/issues"
    },
    "author": "Crawford Currie",
    "repository": {
        "type": "git",
        "url": "https://github.com/cdot/Hotpot.git"
    },
    "scripts": {
        "simulator": "DEBUG='*' node --no-expose-wasm bin/server.js --config test/server/simulated_hotpot.cfg --debug",
        "doc": "jsdoc --verbose -c jsdoc_config.json -r -d doc src",
        "lint": "eslint src -f unix",
        "test": "mocha test/*/*_unit.js --timeout=5000",
        "coverage": "nyc --hook-run-in-context --hook-run-in-this-context --reporter=html --reporter text npm run test",
        "update": "ncu -u "
    },
    "license": "MIT",
    "dependencies": {
        "@cdot/event_calendar": "^1.0.0",
        "@rwap/jquery-ui-touch-punch": "github:RWAP/jquery-ui-touch-punch",
        "cors": "^2.8.5",
        "debug": "^4.3.4",
        "express": "^4.18.2",
        "express-basic-auth": "^1.2.1",
        "express-session": "^1.17.3",
        "jquery": "^3.6.4",
        "jquery-ui-dist": "^1.13.2",
        "posix-getopt": "^1.2.1",
        "session-file-store": "^1.5.0"
    },
    "optionalDependencies": {
        "follow-redirects": "^1.15.6",
        "google-auth-library": "^8.7.0",
        "googleapis": "^113.0.0",
        "nodemailer": "^6.9.1"
    },
    "analyze": true,
    "eslintConfig": {
        "parserOptions": {
            "sourceType": "module",
            "ecmaVersion": 2022
        },
        "env": {
            "browser": true,
            "jquery": true,
            "es2021": true
        },
        "plugins": [
            "import"
        ],
        "globals": {
            "module": true,
            "HOTPOT_DEBUG": true
        },
        "rules": {
            "camelcase": 0,
            "curly": 0,
            "dot-notation": 1,
            "eol-last": 0,
            "new-cap": 0,
            "no-alert": 0,
            "no-console": 0,
            "no-debugger": 0,
            "no-eval": 0,
            "no-loop-func": 0,
            "no-new": 0,
            "no-process-exit": 0,
            "no-underscore-dangle": 0,
            "no-unused-vars": 1,
            "no-use-before-define": 0,
            "no-trailing-spaces": 0,
            "quotes": 0,
            "strict": 0
        }
    },
    "devDependencies": {
        "chai": "^4.3.7",
        "chai-http": "^4.3.0",
        "eslint": ">=8.36.0",
        "eslint-plugin-import": "^2.27.5",
        "jsdoc": "^4.0.2",
        "mocha": "^10.2.0",
        "nyc": "^15.1.0"
    }
}
